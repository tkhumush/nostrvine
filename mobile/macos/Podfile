platform :osx, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'ephemeral', 'Flutter-Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure \"flutter pub get\" is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Flutter-Generated.xcconfig, then run \"flutter pub get\""
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_macos_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_macos_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_macos_build_settings(target)

    # Fix CocoaPods macro redefinition warnings
    target.build_configurations.each do |config|
      # Fix macOS deployment target warnings
      config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '13.0'

      # Remove duplicate $(inherited) from GCC_PREPROCESSOR_DEFINITIONS
      if config.build_settings['GCC_PREPROCESSOR_DEFINITIONS']
        defs = config.build_settings['GCC_PREPROCESSOR_DEFINITIONS']
        if defs.is_a?(Array)
          # Remove all instances of $(inherited) and duplicates
          defs.delete_if { |definition| definition == '$(inherited)' }
          # Remove duplicate POD_CONFIGURATION_DEBUG definitions
          pod_config_defs = defs.select { |d| d.include?('POD_CONFIGURATION_DEBUG') }
          if pod_config_defs.length > 1
            defs.delete_if { |d| d.include?('POD_CONFIGURATION_DEBUG') }
            defs << pod_config_defs.first
          end
          defs.unshift('$(inherited)')
        elsif defs.is_a?(String)
          # Clean up string definitions
          defs = defs.gsub(/\$\(inherited\)\s*/, '').strip
          # Remove duplicate POD_CONFIGURATION_DEBUG
          defs = defs.gsub(/POD_CONFIGURATION_DEBUG=1\s+DEBUG=1\s*/, 'POD_CONFIGURATION_DEBUG=1 ')
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = "$(inherited) #{defs}"
        end
      end

      # Fix Firebase Crashlytics dSYM warnings
      if config.name == 'Debug'
        config.build_settings['DEBUG_INFORMATION_FORMAT'] = 'dwarf-with-dsym'
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
      end

      # Suppress specific warnings
      config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'NO'
      config.build_settings['CLANG_WARN_DEPRECATED_OBJC_IMPLEMENTATIONS'] = 'NO'
      config.build_settings['GCC_WARN_64_TO_32_BIT_CONVERSION'] = 'NO'
    end
  end
end
